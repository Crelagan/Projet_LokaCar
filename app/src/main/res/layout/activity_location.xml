<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LocationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvMarque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Marque :"
            android:layout_weight="0.2"/>

        <EditText
            android:id="@+id/etMarque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvModele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Modele :"
            android:layout_weight="0.2"/>

        <EditText
            android:id="@+id/etModele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tvDateDebut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date de début:"
            android:layout_weight="0.25"/>
        <EditText
            android:id="@+id/etDateDebut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SELECT DATE"
            android:id="@+id/btn_dateDebut"
            android:layout_weight="0.4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tvDateFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date de fin:"
            android:layout_weight="0.25"/>
        <EditText
            android:id="@+id/etDateFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SELECT DATE"
            android:id="@+id/btn_dateFin"
            android:layout_weight="0.4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvDuree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Duree :"
            android:layout_weight="0.2"/>

        <EditText
            android:id="@+id/etDuree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvDurée"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jour(s)"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prix :"
            android:layout_weight="0.1"/>

        <EditText
            android:id="@+id/etPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvPrixUnite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="€"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvTitreNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information Client :"
            android:textStyle="bold"
            android:paddingTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvNom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nom :"
                    android:layout_weight="0.3"/>

                <EditText
                    android:id="@+id/etNom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvPrenom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Prenom :"
                    android:layout_weight="0.3"/>

                <EditText
                    android:id="@+id/etPrenom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnRecherche"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Recherche Client"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvAdresse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Adresse :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etAdresse"
            android:layout_width="0dp"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvCodePostal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Code Postal :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etCodePostal"
            android:layout_width="0dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvTel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Telephone :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etTel"
            android:layout_width="0dp"
            android:inputType="phone"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider la location"
            android:id="@+id/btnValid"/>
    </LinearLayout>


</LinearLayout>