<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.CreationFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajout d'un Vehicule a la flotte "
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvMarque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Marque :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etMarque"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvModele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Modele :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etModele"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvPuissance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Puissance :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etPuissance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvPuissanceUnite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CV"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvBoite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Boite de vitesse :"
            android:layout_weight="0.3"/>

        <Spinner
            android:id="@+id/spBV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvConso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Consommation :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etConso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvConsoUnite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="L/100km"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvCarburant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Carburant :"
            android:gravity="center_vertical"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:id="@+id/spCarburant" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvImmat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Immatriculation :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etImmat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prix :"
            android:layout_weight="0.3"/>

        <EditText
            android:id="@+id/etPrix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_weight="0.2"/>

        <TextView
            android:id="@+id/tvPrixUnite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="â‚¬/jour"
            android:layout_weight="0.2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="Type :"
            android:gravity="center_vertical"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:id="@+id/spType" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enregistrer"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>